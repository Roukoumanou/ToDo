{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Todo List{% endblock %}

{% block header_title %}<h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4 mb-4">
            <a href="{{ path('task_create') }}" class="d-grid btn btn-success">Créer une nouvelle tâche</a>
        </div>
        <div class="col-md-4 mb-4">
            <a href="{{ path('task_list') }}" class="d-grid btn btn-info">Consulter la liste des tâches à faire</a>
        </div>
        <div class="col-md-4 mb-4">
            <a href="{{ path('tasks_done') }}" class="d-grid btn btn-secondary">Consulter la liste des tâches terminées</a>
        </div>
    </div>
{% endblock %}
