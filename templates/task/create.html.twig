{% extends 'base.html.twig' %}

{% block title %}Créer une tache{% endblock %}

{% block header_title %}<h1>Créer une tâche</h1>{% endblock %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                {{ form_start(form) }}
                    {{ form_widget(form) }}

                    <button type="submit" class="m-4 btn btn-success">Envoyer</button>
                    <a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
